<%= form_with url: "/teachers/add_students_to_teachers", method: :get do |form| %>
  <div class="row p-3">
    <div class="col-lg-6 text-center">
      <%= form.label :teacher_id, "Teacher:" %>
      <%= form.select :teacher_id, options_from_collection_for_select(@teachers, 'id', 'name')%>
    </div>
    <div class="col-lg-6 text-center ">
      <%= form.label :student_id, "Student:" %>
      <%= form.select :student_id, options_from_collection_for_select(@students, 'id', 'name')%>
    </div> 
  </div>
  <div class="text-center">
    <%= form.submit %>
  </div> 
  
<% end %>